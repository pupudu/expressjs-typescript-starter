{
  "compilerOptions": {
    "outDir": "./dist",
    "allowJs": true,
    "target": "es6",
    "moduleResolution": "node",
    "module": "commonjs",
    "sourceMap": true,
    "experimentalDecorators": true,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "**/__mocks__/*",
    "**/__tests__/*",
    "package.json"
  ]
}
